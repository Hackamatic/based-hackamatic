# Based Hackamatic Environment Configuration

#######################
# Required API Keys
#######################

# Coinbase Developer Platform Credentials
# Get these from https://docs.cdp.coinbase.com
CDP_API_KEY_NAME=your_cdp_key_name
CDP_API_KEY_PRIVATE_KEY=your_cdp_private_key

# OpenAI API Key
# Get this from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_key

# GitHub Access Token (for repository management)
# Generate at https://github.com/settings/tokens
# Required scopes: repo, workflow
GITHUB_TOKEN=your_github_token

#######################
# Network Configuration
#######################

# Network ID for Base (default: base-sepolia for testnet)
# Options: base-sepolia, base-mainnet
NETWORK_ID=base-sepolia

#######################
# Agent Configuration
#######################

# LLM Model Configuration
# Options: gpt-4, gpt-3.5-turbo
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.2

# Wallet Security Settings
# Maximum transaction amount in ETH
MAX_TRANSACTION_AMOUNT=1.0
# Minimum balance to maintain in ETH
MIN_BALANCE=0.01
# Gas limit for transactions
GAS_LIMIT=300000

#######################
# Optional Settings
#######################

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Development Mode
# Set to true for additional debugging information
DEBUG_MODE=false

# Custom Project Template
# Path to custom project template directory
PROJECT_TEMPLATE_PATH=

#######################
# System Paths
#######################

# Custom paths for data and logs (optional)
# DATA_DIR=./custom/data/path
# LOGS_DIR=./custom/logs/path

#######################
# Security Settings
#######################

# Number of required confirmations for transactions
REQUIRED_CONFIRMATIONS=2

# Maximum retry attempts for operations
MAX_RETRIES=3

# Operation timeout in seconds
OPERATION_TIMEOUT=30 